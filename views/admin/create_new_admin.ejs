<div id="body" class="container" style="">
  <div class="panel panel-default" style="">
    <div class="panel-heading">
      <h2 class="panel-title">Create New Admin</h2>
    </div>
    <div class="panel-body">
          <form  method="post" action="/admin/add_admin" class="form-horizontal" role="form">
          <div class="form-group">
          <label class="control-label col-lg-4 required">Name:</label>
          <div class="col-lg-8">
          <input type="text" id="name" name="name" required="required" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Email:</label>
          <div class="col-lg-8">
          <input type="email" id="email" name="email" required="required" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Username:</label>
          <div class="col-lg-8">
          <input type="text" id="username" name="username" required="required" maxlength="255" pattern=".{2,}" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Password:</label>
          <div class="col-lg-8">
          <input type="password" id="password" name="password" required="required" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <div class="col-lg-offset-4 col-lg-8">
          <button type="submit" id="register" class="btn-color btn btn-primary">Register</button>
          </div>
          </div>
          </form>
    </div>
  </div>
</div>
