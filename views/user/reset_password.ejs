<div id="body" class="container">
<% if(flash) { %>
<% if(flash.err) { %>
      <div>
      <br><br>
      <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <% Object.keys(flash.err).forEach(function(error) { %>
              <%= flash.err[error] %>
        <% }) %>
      </div>
      </div>
<% } %>
<% } %>
  <div class="col-md-6 col-md-offset-3" style="margin-top:50px;">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title">Reset Password</h2>
    </div>
    <div class="panel-body">
          <form  method="post" action="/user/resetpassword" class="form-horizontal" role="form">

          <div class="form-group">
          <label class="control-label col-lg-5 required">Password:</label>
          <div class="col-lg-7">
          <input type="password" id="password" name="password" required="required" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-5 required">Confirmation Password:</label>
          <div class="col-lg-7">
          <input type="password" id="confirmationpassword" name="confirmationpassword" required="required" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <div class="col-lg-offset-5 col-lg-7">
          <input type="hidden" value="<%=user.encryptedId%>" name="id" />
          <button type="submit" id="reset" name="reset" class="btn-color btn btn-primary">Reset Password!</button>
          </div>
          </div>
          </form>

    </div>
  </div>
  </div>
</div>