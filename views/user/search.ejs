<div class="container" style="background-color:white">
    <h4>Search Result of <b><%=q%></b></h4>
    <% if(result.length != 0) { %>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
          <thead>
                  <th>#</th>
                  <th>Username</th>
                  <th>Name</th>
                  <th>University</th>
                  <th>Rating</th>
                  <th></th>
          </thead>
          <tbody>
            <% for(var i=0;i<result.length;i++) { %>
                <tr>
                    <td><%=i+1%></td>
                    <td><%=result[i].username%></td>
                    <td><%=result[i].name%></td>
                    <td><%=result[i].university.name%></td>
                    <td><%=result[i].rating%></td>
                    <td><a class="btn btn-info" href="/user/profile/<%=result[i].username%>">See Profile</a></td>
                </tr>
            <% } %>
          </tbody>
        </table>
     </div>
     <% } else { %>
        <br><br>
        <h3 class="text-center">There has no result.</h3>
        <br><br>
     <% } %>
</div>