<div id="body" class="container" style="">
<% if(flash) { %>
<% if(flash.err) { %>
      <div>
      <br><br>
      <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <% Object.keys(flash.err).forEach(function(error) { %>
              <%= flash.err[error] %>
        <% }) %>
      </div>
      </div>
<% } else if (flash.success){ %>

<% } %>
<% } %>
  <div class="panel panel-default" style="">
    <div class="panel-heading">
      <h2 class="panel-title">Register</h2>
    </div>
    <div class="panel-body">
          <form  method="post" action="/session/regis_user" class="form-horizontal" role="form">
          <div class="form-group">
          <label class="control-label col-lg-4 required">Name:</label>
          <div class="col-lg-8">
          <input type="text" id="name" name="name" required="required" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Email:</label>
          <div class="col-lg-8">
          <input type="email" id="email" name="email" required="required" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Username:</label>
          <div class="col-lg-8">
          <input type="text" id="username" name="username" required="required" maxlength="255" pattern=".{2,}" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Password:</label>
          <div class="col-lg-8">
          <input type="password" id="password" name="password" required="required" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Confirmation Password:</label>
          <div class="col-lg-8">
          <input type="password" id="confirmationpassword" name="confirmationpassword" required="required" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">University</label>
          <div class="col-lg-8">
          <select id="university" name="university" required="required" class="form-control">
          <option value="mikroskil">Mikroskil</option>
          <option value="binus">Binus University</option>
          </select>
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Gender</label>
          <div class="col-lg-8">
          <select id="gender" name="gender" required="required" class="form-control">
          <option value="m">Male</option>
          <option value="f">Female</option>
          </select>
          </div>
          </div>
          <div class="form-group">
          <div class="col-lg-offset-4 col-lg-8">
          <button type="submit" id="register" class="btn-color btn btn-primary">Register</button>
          </div>
          </div>
          </form>
    </div>
  </div>
</div>
