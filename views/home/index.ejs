<div class="container" style="background-color:white;">
    <h2>Welcome to Iseloom Problem Archive
    <h5>In this site, you can find hundreds of programming problems. If you're new here, just <a href="/register">register</a> and start solving!</h5>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Suggested Problems</div>
                <div class="panel-body">
                    <p>This is the suggested problems</p>
                </div>
                <!-- Table -->
                <table class="table table-striped table-hover">
                    <thead>
                        <th>#</th>
                        <th>Problems</th>
                        <th>Solved</th>
                    </thead>
                    <tbody>
                        <% var idx = 1; %>
                        <% _.each(problems, function(problem) { %>
                            <tr>
                                <% var tot = 0 %>
                                <td><%=idx%></td>
                                <td><a href="/problem/preview?prob=<%=problem.valName%>"><%=problem.name%></a></td>
                                <% for(var i=0;i<submissions.length;i++) { %>
                                    <% if(submissions[i].id_problem==problem.id && submissions[i].result==1) { %>
                                          <% tot++ %>
                                    <% } %>
                                <% } %>
                                <td><%=tot%></td>
                            </tr>
                            <% idx++%>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Top 10 Ranklists</div>
                <div class="panel-body">
                    <p>The top 10 ranklists in iseloom</p>
                </div>

                <!-- Table -->
                <table class="table table-striped table-hover">
                    <thead>
                        <th>#</th>
                        <th>Name</th>
                        <th>Rating</th>
                    </thead>
                    <tbody>
                        <% var idx = 1 %>
                        <% _.each(users, function(user){ %>
                            <% if(!user.admin && user.verification) { %>
                            <tr>
                                <td><%=idx%></td>
                                <td><a href="/user/profile/<%=user.username%>"><%=user.name%></a></td>
                                <td><%=user.rating%></td>
                            </tr>
                            <% idx++; %>
                            <% } %>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>