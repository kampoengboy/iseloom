<div class="container" style="background-color:white">
    <h3 class="text-center">Scoreboard <%=contest.name%>
      <br/>
      <% if(contest.freeze && ((contest.datetimeclose - new Date()) < contest.freezetime * 60000)) { %><% var check = true %><% var datefreeze = contest.datetimeclose.getTime() - (contest.freezetime*60000) %>(FREEZE since <span id="time"></span>)<% } %>
    </h3>
    <h4 id="clock" class="text-center"></h4>
    <% if(session.authenticated) { %>
        <% if(session.User.admin) { %>
            <% if(!contest.approve && show_approval) { %>
                <a href="/contest/apply_rating/<%=contest.id%>" class="btn btn-success">Approve Contest</a>
                <br><br>
            <% } %>
        <% } %>
    <% } %>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <th>#</th>
            <th>Name</th>
            <th>Univ</th>
            <th>Solved</th>
            <th>Score</th>
            <% _.each(problems, function(problem) { %>
                <th>
                <% if(session.authenticated && contest.datetimeclose >= new Date()) { %>
                    <a href="/problem/preview?prob=<%=problem.valName%>&idc=<%=contest.id%>"><%=problem.valName%></a>
                <% } else {%>
                    <%=problem.valName%>
                <% } %>
                </th>
            <% }) %>
        </thead>
        <tbody>
            <% if(users.length > 0) { %>
           <% var idx = 1 %>
                  <% _.each(users, function(user){%>
                      <tr>
                          <td><%=idx%></td>
                          <% var elPos = universities.map(function(x) {return x.id; }).indexOf(user.id_user.university); %>
                          <td><%=user.id_user.name%></td>
                          <td><%=universities[elPos].name%></td>
                          <td>
                            <% if(contest.freeze) { %>
                              <%=user.solvefreeze%>
                            <% } else { %>
                              <%=user.solve%>
                            <% } %>
                          </td>
                          <td>
                            <% if(contest.freeze) { %>
                              <%=user.scorefreeze%>
                            <% } else { %>
                              <%=user.score%>
                            <% } %>
                          </td>
                          <% _.each(problems, function(problem) { %>
                               <% var res = false; %>
                               <% var tried = 0; %>
                               <% var min = 0; %>
                               <% for(var i=0;i<submissions.length;i++) {%>
                                  <% if(contest.freeze && ((contest.datetimeclose - submissions[i].createdAt) < contest.freezetime * 60000)) { %>
                                  <% } else { %>
                                    <% if(submissions[i].id_user.id==user.id_user.id && submissions[i].id_problem.id==problem.id && !res) { %>
                                        <% if (submissions[i].result != null) { %>
                                          <% tried = tried + 1 %>
                                          <% if (submissions[i].result) {%>
                                            <% min = submissions[i].minute %>
                                            <% res = true; %>
                                          <% } %>
                                        <% } %>
                                    <% } %>
                                  <% } %>
                               <% } %>
                              <% if(!tried) { %>
                               <td></td>
                              <% } else { %>
                                <% if(res) { %>
                                   <td style="background-color:#00FF33" class="text-right"><%=tried %> (<% if (tried > 1) { %><%=(tried-1)*20+"+"%><% } %><%=min%>)</td>
                                <% } else {%>
                                   <td style="background-color:#FF0000; color:white;" class="text-right"><%=tried %></td>
                                <% } %>
                              <% } %>
                          <% }) %>
                      </tr>
                      <% idx++ %>
                  <%})%>
            <% } %>
        </tbody>
    </table>
</div>
<script>
    var d = new Date('<%=contest.datetimeclose%>');
    var clock_div_name = '#clock';
    $(clock_div_name).countdown(d).on('update.countdown', function(event) {
        $(this).html(event.strftime('%D days %H:%M:%S'));
     }).on('finish.countdown', function(event) {
      $(this).html('Contest has done.')
    });
    if ("<%=check%>") {
      Number.prototype.padLeft = function(base,chr){
        var  len = (String(base || 10).length - String(this).length)+1;
        return len > 0? new Array(len).join(chr || '0')+this : this;
      };
      var date = new Date("<%=new Date(datefreeze)%>");
      dformat = [date.getHours().padLeft(),
                 date.getMinutes().padLeft(),
                 date.getSeconds().padLeft()].join(':');
      $('#time').html(dformat);
    }
</script>