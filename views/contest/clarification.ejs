<div class="container" style="background-color:white">
    <h3>Clarifications for the Contest</h3>
    <button data-toggle="modal" data-target="#myModal1" class="btn btn-success">Add Clarification</button>
    <br><br>
     <% if(clarifications.length > 0) {%>
        <% _.each(clarifications, function(clarification) { %>
            <div class="well">
                <h4>Question : </h4>
                <br>
                <p><%=clarification.question%><p>
                <% if(typeof clarification.answer!="undefined") { %>
                <br>
                <h4>Answer : </h4>
                <br>
                <p><%=clarification.answer%><p>
                <% } %>
                <% if(req.session.User.admin && typeof clarification.answer=="undefined") { %>
                <br>
                <form action="/contest/answer_clarification?idCl=<%=clarification.id%>" method="POST" class="regsite" id="regsite">
                <div class="control-group">
                        <textarea style="border:1px solid black; height:400px" name="answer"></textarea>
                </div>
                <br>
                <button type="submit" class="btn btn-primary btn-full" value="Send" id="">Answer Clarification</button>
                </form>
                <% } %>
            </div>
        <% }) %>
     <% } else {%>
        <h4 class="text-center">There has no clarifications</h4>
        <br><br>
     <% } %>
</div>
<div class="modal fade" id="myModal1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Make Clarification</h4>
      </div>
      <form action="/contest/make_clarification?idc=<%=id_contest%>" method="POST" class="regsite" id="regsite">
      <div class="modal-body">
        <p style="font-size:15px; font-weight: normal;">Your Question : </p>
        <div class="control-group">
                <textarea style="border:1px solid black; height:400px" name="question"></textarea>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <input type="submit" class= "btn btn-primary" value="Send" id="">
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
      </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
</div>
