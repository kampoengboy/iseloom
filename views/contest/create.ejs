<div class="container" style="background-color:white">
  <% if(flash) { %>
  <% if(flash.err) { %>
        <div>
        <br><br>
        <div class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span>
          <% Object.keys(flash.err).forEach(function(error) { %>
                <%= flash.err[error] %>
          <% }) %>
        </div>
        </div>
  <% } else if (flash.success){ %>

  <% } %>
  <% } %>
    <h4 class="text-center">Create a Contest</h4>
    <br><br>
    <form  method="post" action="/contest/create_contest" class="form-horizontal" role="form">

          <div class="form-group">
          <label class="control-label col-md-4 required">Contest Name : </label>
          <div class="col-md-8">
          <input type="text" id="contest_name" name="contestname" required="required" pattern=".{2,}" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-md-4 required">Date / Time Open : </label>
          <div class="col-md-8">
          <input type="text" id="datetimeopen" name="datetimeopen" required="required" class="form-control time-class" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-md-4 required">Date / Time Close : </label>
          <div class="col-md-8">
          <input type="text" id="datetimeclose" name="datetimeclose" required="required" class="form-control time-class" >
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-md-4 required">Freeze Time (in Minutes) : </label>
          <div class="col-md-8">
          <input type="text" id="freezetime" name="freezetime" required="required" class="form-control" >
          </div>
          </div>
          <div class="form-group">
          <div class="col-md-offset-4 col-md-2">
          <button type="submit" id="createcontest" name="createcontest" class="btn-color form-control btn btn-primary">Create Contest</button>
          </div>
          </div>
    </form>
</div>
<script>
    $('.time-class').datetimepicker();
</script>