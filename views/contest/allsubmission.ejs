<div class="container" style="background-color:white" ng-app="allsubmission" ng-controller="MainCtrl">
    <h3 class="text-center">All submission for Contest <%=contest.name%> </h3>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <th>#</th>
            <th>ID Problem</th>
            <th>Contestant</th>
            <th>Time</th>
            <th>Result</th>
            <th></th>
        </thead>
        <tbody>
            <tr ng-repeat="submission in submissions">
                      <td>{{$index+1}}</td>
                      <td>{{submission.id_problem}}</td>
                      <td>{{submission.contestant}}</td>
                      <td>{{submission.time}}</td>
                      <td ng-if="submission.output==0">COMPILING</td>
                      <td ng-if="submission.output>=1 && submission.result==1" style="background-color:#00FF33">
                           CORRECT
                      </td>
                      <td ng-if="submission.output>=1 && submission.result==0" style="background-color:#FF0000; color:white;">
                           WRONG ANSWER
                      </td>
                      <td><a href="/contest/submissiondetail/{{submission.id_submission}}" class="btn btn-success">Preview Submission</a></td>
            </tr>
        </tbody>
     </table>
</div>
<script src="/scripts/allsubmission.js"></script>